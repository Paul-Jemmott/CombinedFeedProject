<p id="notice"><%= notice %></p>

<h1>Listing Feeds Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>


  <% if !params[:search] %>

    <% @feeds_users.each do |feeds_user| %>

        <% current_feed = Feedjira::Feed.fetch_and_parse(Feed.find_by_feed_id(feeds_user.feed_id).url) %>
        <h1><%= current_feed.title %></h1>

          <% if(!current_feed.image.nil?) %>
              <h2><img src='<%= current_feed.image.split(' ').first %>'></h2>
          <% end %>
        <% current_article = current_feed.entries %>
        <% current_article[1..5].each do |article| %>
            Title:<%= article.title %>  <br/>
            Date: <%= article.published %> <br/>
            Summary: <%= strip_tags(article.summary) %> <br/>
            <%= link_to "Read full article", article.url %><br/><br/>
        <% end %>
        <!--hi-->

        <span><%= link_to 'Show', feeds_user %></span>
          <span> <%= link_to 'Edit', edit_feeds_user_path(feeds_user) %></span>
       <span> <%= link_to 'Destroy', feeds_user, method: :delete, data: { confirm: 'Are you sure?' } %></span>

    <% end %>


    <% else %>
      <% @feeds_users.each do |article| %>
          <h3><%= article.title %></h3>
          <a href="<%=article.url%>">Read full article</a>
          <p><%=
              strip_tags(article.summary)
          %></p>
      <% end %>

    <% end %>


  </tbody>
</table>

<br>

<%= link_to 'New Feeds user', new_feeds_user_path %>
